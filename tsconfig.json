{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    // "test/**/*",
    "src/types/**/*",
  ]
}